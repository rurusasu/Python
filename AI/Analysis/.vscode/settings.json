{
  // オートセーブ設定。
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  // ファイルの終了時に行末のスペース削除。
  "files.trimTrailingWhitespace": true,
  // ファイル保存時に末尾に新しい行を挿入しない。
  "files.insertFinalNewline": false,
  // Tab をスペース 4 つに変換
  "[python]": {
    // python 言語に対してエディタ設定を上書き
    // ファイル保存時に実行されるコードアクションの種類
    "editor.codeActionsOnSave": {
      // ファイルの保存時に 'インポートを整理' アクションを実行するかどうかを制御。
      "source.organizeImports": false
    },
    // ファイル保存時にフォーマットする。
    "editor.formatOnSave": true,
    // 貼り付けた内容がフォーマッターにより自動的にフォーマットされる。
    "editor.formatOnPaste": false,
    // エディターで入力後に自動的に行のフォーマットを行うかどうかを制御。
    "editor.formatOnType": false,
    // ファイルがこの設定で開かれている時に以下の設定を有効にするかを設定する。
    "editor.detectIndentation": true,
    //Tab キー を押すとスペースが挿入される。
    "editor.insertSpaces": true,
    // 1つの Tab に対するスペースの数
    "editor.tabSize": 4
  },
  // Contrils the OS.
  // 拡張機能のロード時にターミナルで Python 環境をアクティブにする。
  "python.terminal.activateEnvInCurrentTerminal": true,
  // 仮想環境のパス。作成した Anaconda 仮想環境を指定する。
  //"python.venvPath": "${env:CONDA_ENVS_PATH}\\analysis",
  // @sync os=windows
  "python.venvFolders": [],
  // @sync os=linux
  // "python.venvPath": "/opt/conda/envs/analysis",
  // @sync os=linux
  "python.autoComplete.extraPaths": [
    "/opt/conda/envs/analysis/Lib/site-packages"
  ],
  // Python コマンドのパス。
  // @sync os=linux
  // "python.pythonPath": "/opt/conda/bin/python",
  // conda コマンドのパス。[Anacondaインストール先] / condabin / conda.bat を指定する。
  // @sync os=windows
  "python.condaPath": "C:\\Users\\PC-2020-3\\miniconda3\\condabin\\conda.bat",
  // @sync os=linux
  // "python.condaPath": "/opt/conda/etc/profile.d",
  // フォーマッターの設定。black を指定する。
  "python.formatting.provider": "black",
  // @sync os=windows
  "python.formatting.blackPath": "C:\\tools\\miniconda3\\Scripts\\black-script.py",
  // フォーマッターの設定。autopep8 を指定する。
  //"python.formatting.provider": "autopep8",
  //"python.formatting.autopep8Path": "C:\\tools\\miniconda3\\envs\\analysis\\Scripts\\autopep8",
  // Lint の設定。
  "python.linting.enabled": true,
  // ファイル保存時に lint を実行する。
  "python.linting.lintOnSave": true,
  // flake8 を有効化する。
  "python.linting.flake8Enabled": false,
  // @sync os=windows
  "python.linting.flake8Path": "C:\\Users\\PC-2020-3\\miniconda3\\Scripts\\flake8-script.py",
  // mypy を有効化する。
  "python.linting.mypyEnabled": true,
  // @sync os=windows
  "python.linting.mypyPath": "C:\\tools\\miniconda3\\Scripts\\mypy-script.py",
  //"python.linting.mypyPath": "C:\\Users\\PC-2020-3\\miniconda3\\Scripts\\mypy-script.py",
  "python.linting.pycodestyleEnabled": false,
  "python.linting.pylintEnabled": false,
  //"python.pythonPath": "C:\\tools\\miniconda3\\python.exe",
  // Docstring のフォーマット
  "autoDocstring.docstringFormat": "google",
  "python.pythonPath": "C:\\Users\\PC-2020-3\\miniconda3\\python.exe"
  // Testの設定。
}