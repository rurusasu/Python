      "program": "${file}",
      "python": "/opt/conda/bin/python",
      "console": "integratedTerminal",   // プログラムを起動するコンソールの種類を指定
      "cwd": "${fileDirname}", // デバッグ実行を行うディレクトリ
      "redirectOutput": true
    },
    {
      "name": "Python for windows",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "python": "C:\\tools\\miniconda3\\python.exe",
      "console": "integratedTerminal",
      "cwd": "${fileDirname}",
      "redirectOutput": true
    }
  ]
}